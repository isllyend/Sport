<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:background="#FF6633">
        <ImageView
            android:id="@+id/iv_left"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:layout_width="35dp"
            android:src="@mipmap/back"
            android:layout_height="35dp" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffff"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="个人资料" />
    </RelativeLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="#d2d2d2"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/grzl_line1"
            android:background="#fff"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:layout_marginLeft="10dp"
                android:text="头像"
                android:layout_width="0dp"
                android:textColor="#000"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/grzl_iv"
                android:layout_width="50dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:layout_height="50dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/grzl_line1"
            android:id="@+id/grzl_line2"
            android:background="#fff"
            android:layout_marginTop="0.5dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:layout_marginLeft="10dp"
                android:text="昵称"
                android:layout_width="0dp"
                android:textColor="#000"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/grzl_nickname"
                android:layout_width="wrap_content"
                android:text=""
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/grzl_line2"
            android:id="@+id/grzl_line3"
            android:background="#fff"
            android:layout_marginTop="0.5dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:layout_marginLeft="10dp"
                android:text="性别"
                android:layout_width="0dp"
                android:textColor="#000"
                android:layout_weight="1"

                android:layout_gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/grzl_gender"
                android:layout_width="wrap_content"
                android:text=""
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/grzl_line3"
            android:id="@+id/grzl_line4"
            android:background="#fff"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:layout_marginLeft="10dp"
                android:text="手机号"
                android:layout_width="0dp"
                android:textColor="#000"
                android:layout_weight="1"

                android:layout_gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/grzl_username"
                android:layout_width="wrap_content"
                android:text=""
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/grzl_line4"
            android:id="@+id/grzl_line5"
            android:background="#fff"
            android:layout_marginTop="0.5dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:layout_marginLeft="10dp"
                android:text="登录密码"
                android:layout_width="0dp"
                android:textColor="#000"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="修改"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>