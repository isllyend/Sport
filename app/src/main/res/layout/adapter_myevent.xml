<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <TextView
        android:id="@+id/order"
        android:layout_marginLeft="10dp"
        android:text="订单号:"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_toRightOf="@+id/order"
        android:id="@+id/order_num"
        android:layout_marginLeft="10dp"
        android:text="19999"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:textColor="#417505"
        android:layout_marginLeft="10dp"
        android:text="报名中"
        android:textSize="25sp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
    <TextView
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="3dp"/>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="120dp">
            <TextView
                android:id="@+id/tv_match_name"
                android:textSize="20sp"
                android:maxLines="2"
                android:text="我是比赛的名字"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                >
                <TextView
                    android:textColor="#FF6937"
                    android:id="@+id/tv_match_sport"
                    android:text="足球"
                    android:textSize="20sp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_joined_enroll_num"
                    android:textColor="#FF6937"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:text="1000/"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_max_enroll_num"
                    android:textColor="#FF6937"
                    android:textSize="15sp"
                    android:text="1000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"
                android:id="@+id/iv_photo"
                android:src="@mipmap/default_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/mark"
            android:layout_width="36dp"
            android:layout_height="36dp"/>
        <TextView
            android:id="@+id/tv_address"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:text="我是位置"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv"
            android:layout_centerVertical="true"
            android:src="@mipmap/clock"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
        <TextView
            android:textSize="15sp"
            android:id="@+id/tv_begintime"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv"
            android:text="开始时间"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_begintime"
            android:textSize="15sp"
            android:text="~"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_endtime"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_"
            android:textSize="15sp"
            android:text="结束时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <TextView
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="3dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textColor="#000"
            android:id="@+id/f"
            android:layout_marginLeft="10dp"
            android:text="报名费用:"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#ff6633"
            android:layout_toRightOf="@+id/f"
            android:id="@+id/fee"
            android:layout_marginLeft="10dp"
            android:text="888.00"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:textColor="#19C47A"
            android:layout_marginLeft="10dp"
            android:text="已支付"
            android:textSize="25sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>