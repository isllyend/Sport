<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#FF6633">
        <ImageView
            android:id="@+id/venue_iv_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/back"
            android:clickable="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="6dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="请选择城市"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dp"
            android:textColor="#fff"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#fff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:text="当前定位城市"
            android:textColor="#000"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/venue_tv_currentcity"
            android:layout_width="48dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:background="#FF6633"
            android:textColor="#fff"
            android:text="上海市"
            android:textSize="14sp"
            android:gravity="center"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/venue_ll_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/venue_tv_shanghai"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="2dp"
            android:background="#fff"
            android:text="上海市"
            android:clickable="true"
            android:onClick="doClick"
            android:textColor="#ff6633"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            />
        <TextView
            android:id="@+id/venue_tv_nanjing"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="#fff"
            android:text="南京市"
            android:clickable="true"
            android:onClick="doClick"
            android:textColor="#ff6633"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            />
        <TextView
            android:id="@+id/venue_tv_suzhou"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="#fff"
            android:text="苏州市"
            android:clickable="true"
            android:onClick="doClick"
            android:textColor="#ff6633"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            />
        <TextView
            android:id="@+id/venue_tv_ningbo"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="#fff"
            android:text="宁波市"
            android:clickable="true"
            android:onClick="doClick"
            android:textColor="#ff6633"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            />
        <TextView
            android:id="@+id/venue_tv_jian"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="#fff"
            android:text="吉安市"
            android:clickable="true"
            android:onClick="doClick"
            android:textColor="#ff6633"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            />
        <TextView
            android:id="@+id/venue_tv_jinan"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="#fff"
            android:text="济南市"
            android:clickable="true"
            android:onClick="doClick"
            android:textColor="#ff6633"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            />
    </LinearLayout>


</LinearLayout>