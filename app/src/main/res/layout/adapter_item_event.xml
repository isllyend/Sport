<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv"
            android:layout_centerVertical="true"
            android:src="@mipmap/clock"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
        <TextView
            android:textSize="15sp"
            android:id="@+id/tv_begintime"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv"
            android:text="开始时间"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_begintime"
            android:textSize="15sp"
            android:text="~"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_endtime"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_"
            android:textSize="15sp"
            android:text="结束时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_status"
            android:textColor="#00f"
            android:textSize="20sp"
            android:text="报名中"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView
        android:background="#EEEEEE"
        android:layout_width="match_parent"
        android:layout_height="3dp"/>
<LinearLayout
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_match_name"
            android:textSize="20sp"
            android:maxLines="2"
            android:text="我是比赛的名字"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            >
            <TextView
                android:textColor="#FF6937"
                android:id="@+id/tv_match_sport"
                android:text="足球"
                android:textSize="25sp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_joined_enroll_num"
                android:textColor="#FF6937"
                android:layout_marginLeft="20dp"
                android:textSize="15sp"
                android:text="1000/"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_max_enroll_num"
                android:textColor="#FF6937"
                android:textSize="15sp"
                android:text="10000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/mark"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <TextView
                android:id="@+id/tv_address"
                android:textSize="17sp"
                android:text="我是位置"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_isfee"
            android:textColor="#fff"
            android:background="#FF6937"
            android:textSize="20sp"
            android:text="自费"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:id="@+id/iv_photo"
            android:src="@mipmap/default_bg"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>